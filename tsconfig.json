{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": false,
    "esModuleInterop": false,
    "inlineSources": true,
    "jsx": "preserve",
    "lib": ["dom", "es6", "es2016", "es2017", "dom.iterable", "scripthost", "esnext.asynciterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2017",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.tsx", "src/**/*.jsx", "node_modules/@types/**/*.d.ts", "graphQLFilesModules.d.ts"],
  "exclude": ["node_modules"]
}
